{
  "_comment": "Variance Trading Rules Configuration v2.0",
  "_last_updated": "2025-12-25",
  "_documentation": "docs/user-guide/config-guide.md",

  "__SCREENING_FILTERS__": "=================================================",

  "screening": {
    "vrp_thresholds": {
      "vrp_structural_threshold": 1.10,
      "vrp_structural_rich_threshold": 1.30,
      "vrp_tactical_threshold": 1.15,
      "hv_floor_percent": 5.0
    },

    "volatility_checks": {
      "hv_rank_trap_threshold": 15.0,
      "volatility_momentum_min_ratio": 0.85,
      "vtr_coiled_threshold": 0.75
    },

    "iv_percentile": {
      "min_iv_percentile": 20.0
    },

    "liquidity": {
      "min_tt_liquidity_rating": 4,
      "min_atm_volume": 500,
      "min_atm_open_interest": 500,
      "max_slippage_pct": 0.05,
      "liquidity_mode": "volume"
    },

    "retail_efficiency": {
      "retail_min_price": 25.0,
      "retail_max_slippage": 0.05
    },

    "quality": {
      "min_variance_score": 25.0,
      "vrp_tactical_aggregation_floor": -0.50,
      "vrp_tactical_aggregation_ceiling": 1.00,
      "vrp_tactical_quality_warning_threshold": 1.00
    }
  },

  "__PORTFOLIO_MANAGEMENT__": "==============================================",

  "portfolio": {
    "risk_limits": {
      "net_liquidity": 50000,
      "concentration_risk_pct": 0.25,
      "concentration_limit_pct": 0.05,
      "size_threat_pct": 0.05,
      "max_strategies_per_symbol": 3,
      "allow_proxy_stacking": false
    },

    "position_management": {
      "vrp_scalable_threshold": 1.35,
      "scalable_divergence_threshold": 1.10,
      "dead_money_vrp_structural_threshold": 0.80,
      "dead_money_pl_pct_low": -0.10,
      "dead_money_pl_pct_high": 0.10
    },

    "correlation": {
      "max_portfolio_correlation": 0.70,
      "beta_weighted_symbol": "SPY"
    },

    "delta_management": {
      "portfolio_delta_long_threshold": 75,
      "portfolio_delta_short_threshold": -50
    }
  },

  "__TRIAGE_AND_ACTIONS__": "==============================================",

  "triage": {
    "gamma_risk": {
      "gamma_dte_threshold": 21
    },

    "profit_taking": {
      "profit_harvest_pct": 0.50
    },

    "earnings": {
      "earnings_days_threshold": 5
    },

    "theta_efficiency": {
      "theta_efficiency_low": 0.1,
      "theta_efficiency_high": 0.5,
      "friction_horizon_min_theta": 0.01
    }
  },

  "__HEDGING_STRATEGY__": "==================================================",

  "hedge_rules": {
    "enabled": true,
    "index_symbols": ["SPY", "QQQ", "IWM", "DIA", "/ES", "/NQ", "/RTY"],
    "qualifying_strategies": ["Long Put", "Vertical Spread (Put)", "Diagonal Spread (Put)"],
    "delta_threshold": -5,
    "require_portfolio_long": true
  },

  "__DATA_VALIDATION__": "===================================================",

  "data_validation": {
    "global_staleness_threshold": 0.50,
    "data_integrity_min_theta": 0.50,
    "data_integrity_min_gamma": 0.001,
    "proxy_iv_score_haircut": 0.85,
    "asset_mix_equity_threshold": 0.80
  },

  "futures_delta_validation": {
    "enabled": true,
    "min_abs_delta_threshold": 1.0,
    "_comment": "Warn if futures beta_delta < 1.0 (suggests raw delta, not multiplied)"
  },

  "__SCORING_AND_SIGNALS__": "===============================================",

  "scoring": {
    "variance_score_dislocation_multiplier": 200,
    "variance_score_weights": {
      "structural_vrp": 0.275,
      "tactical_vrp": 0.275,
      "volatility_momentum": 0.1,
      "hv_rank": 0.1,
      "iv_percentile": 0.1,
      "yield": 0.1,
      "retail_efficiency": 0.05,
      "liquidity": 0.0
    },
    "variance_score_momentum_ceiling": 1.20,
    "variance_score_hv_rank_ceiling": 100.0,
    "variance_score_iv_percentile_ceiling": 100.0,
    "variance_score_yield_ceiling": 15.0,
    "variance_score_retail_price_ceiling": 100.0,
    "variance_score_volume_ceiling_multiplier": 5.0,
    "vrp_tactical_cheap_threshold": -0.10,
  },

  "__STRESS_TESTING__": "====================================================",

  "stress_scenarios": [
    {"label": "Crash -5%", "move_pct": -0.05, "vol_point_move": 15.0},
    {"label": "Dip -3%", "move_pct": -0.03, "vol_point_move": 5.0},
    {"label": "Flat", "move_pct": 0.0, "vol_point_move": 0.0},
    {"label": "Rally +3%", "move_pct": 0.03, "vol_point_move": -5.0},
    {"label": "Rally +5%", "move_pct": 0.05, "vol_point_move": -10.0},
    {"label": "Vol Spike", "move_pct": 0.0, "vol_point_move": 10.0},
    {"label": "Vol Crush", "move_pct": 0.0, "vol_point_move": -10.0}
  ],

  "__DISPLAY_SETTINGS__": "==================================================",

  "triage_display": {
    "max_secondary_tags": 3,
    "use_icons": true,
    "hide_tags": [],
    "tag_colors": {
      "EXPIRING": "bold yellow",
      "HARVEST": "bold green",
      "SIZE_THREAT": "bold red",
      "DEFENSE": "bold red",
      "GAMMA": "bold magenta",
      "HEDGE_CHECK": "dim green",
      "TOXIC": "bold red",
      "EARNINGS_WARNING": "bold yellow",
      "SCALABLE": "bold cyan"
    },
    "tag_icons": {
